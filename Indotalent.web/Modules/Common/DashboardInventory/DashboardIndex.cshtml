						<input type="text" class="knob" data-readonly="true" value="@Model.PurchaseKPI3.Value" data-width="60" data-height="60" data-fgColor="#899FD4">
						<div class="knob-label">@Model.PurchaseKPI3.Name</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section class="col-lg-6 connectedSortable">
		<div class="box box-solid widget-bg-one">
			<div class="box-header">
				<i class="fa fa-th"></i>
				<h3 class="box-title">Sales Delivery (Qty)</h3>
			</div>
			<div class="box-body border-radius-none">
				<div class="chart" id="sales-chart" style="height: 250px;"></div>
			</div>
			<div class="box-footer no-border">
				<div class="row">
					<div class="col-xs-4 text-center" style="border-right: 1px solid #f4f4f4">
